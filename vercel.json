{
  "version": 2,
  "github": {
    "enabled": false
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "apps/backend/dist/src/main.js"
    },
    {
      "src": "/(.+\\..+)",
      "dest": "apps/frontend/dist/$1"
    },
    {
      "src": "/(.*)",
      "dest": "apps/frontend/dist/index.html"
    }
  ],
  "outputDirectory": "apps/frontend/dist",
  "buildCommand": "npm run build",
  "installCommand": "npm install"
}
